#include <iostream>

using namespace std;

int main ()
{
	float sugarPriceUS, ricePricePound , sardinesPricepound , coffeePriceUSD , milkPriceUS ;
	int sugarQty, coffeeQty, milkQty;
	float riceQty,sardinesQty,totalCosttPHP, sugarCostPHP;
	float riceCostPHP, sardinesCostPHP, coffeeCostPHP, milkCostPHP, totalCostPHP;
	float usd = 1, php = 55.93;
	
	
	cout <<"Welcome to SEVENPM Sari-Sari store" << endl;
	//sugar
	cout << ".........................." << endl;
	cout <<"Sugar:";
	cin >> sugarQty;
	cout <<"Sugar Price:";
	cin >> sugarPriceUS;
	//Rice
	cout << ".........................." << endl;
	cout <<"Rice per pound:";
	cin >> riceQty;
	cout << "Rice price per pound:";
	cin >> ricePricePound;
	//sardines
	cout << ".........................." << endl;
	cout <<"Sardines per pound:";
	cin >> sardinesQty;
	cout <<"Sardines price per pound:";
	cin >> sardinesPricepound;
